<Window x:Class="OpenCodeLab.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help - OpenCodeLab" Height="520" Width="550"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Quick Reference" FontSize="20" FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,15"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <StackPanel>
                <!-- Getting Started -->
                <TextBlock Text="Getting Started" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <StackPanel Margin="10,0,0,15">
                    <TextBlock Text="1. Extract the release zip to a folder" Margin="0,0,0,3"/>
                    <TextBlock Text="2. Place ISOs in C:\LabSources\ISOs\" Margin="0,0,0,3"/>
                    <TextBlock Text="3. Run OpenCodeLab-V2.exe as Administrator" Margin="0,0,0,3"/>
                    <TextBlock Text="4. Review the Preflight Checks panel" Margin="0,0,0,3"/>
                    <TextBlock Text="5. Click Initialize Env to set up prerequisites" Margin="0,0,0,3"/>
                    <TextBlock Text="6. Create a new lab and click Deploy" Margin="0,0,0,3"/>
                </StackPanel>

                <!-- Preflight Checks -->
                <TextBlock Text="Preflight Checks" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap" Margin="10,0,0,15"
                           Text="The Dashboard shows a collapsible Preflight Checks panel that verifies Hyper-V is enabled, AutomatedLab is installed, LabSources exists, and the network switch is configured. Click Re-check to refresh or Initialize Env to fix missing prerequisites."/>

                <!-- VM Roles -->
                <TextBlock Text="VM Roles" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Grid.Column="0" Background="#F0F0F0" Padding="8,5">
                            <TextBlock Text="Role" FontWeight="SemiBold" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" Background="#F0F0F0" Padding="8,5">
                            <TextBlock Text="Description" FontWeight="SemiBold" FontSize="11"/>
                        </Border>

                        <!-- Rows -->
                        <Border Grid.Row="1" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="DC" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Domain Controller (RootDC)" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="MemberServer" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Domain-joined server" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="FileServer" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="File server role" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="4" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="WebServer" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="IIS web server" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="5" Grid.Column="0" Padding="8,4">
                            <TextBlock Text="Client" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="5" Grid.Column="1" Padding="8,4">
                            <TextBlock Text="Domain-joined workstation (Win 11)" FontSize="11"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Default Configuration -->
                <TextBlock Text="Default Configuration" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Grid.Column="0" Background="#F0F0F0" Padding="8,5">
                            <TextBlock Text="Setting" FontWeight="SemiBold" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" Background="#F0F0F0" Padding="8,5">
                            <TextBlock Text="Default" FontWeight="SemiBold" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Domain" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="lab.com" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Admin" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="dod_admin" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Password" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="Server123!" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="4" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="VM RAM" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="4 GB" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="5" Grid.Column="0" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="VM Disk" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="5" Grid.Column="1" Padding="8,4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <TextBlock Text="80 GB" FontSize="11"/>
                        </Border>

                        <Border Grid.Row="6" Grid.Column="0" Padding="8,4">
                            <TextBlock Text="Network" FontSize="11"/>
                        </Border>
                        <Border Grid.Row="6" Grid.Column="1" Padding="8,4">
                            <TextBlock Text="Internal + NAT (192.168.10.0/24)" FontSize="11"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- GitHub Link -->
                <TextBlock FontSize="12" Margin="0,0,0,5">
                    <Run Text="Full documentation: "/>
                    <Hyperlink NavigateUri="https://github.com/anthonyscry/OpenCodeLab" RequestNavigate="Hyperlink_RequestNavigate">
                        github.com/anthonyscry/OpenCodeLab
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" Click="CloseButton_Click"
                Width="90" Height="32" HorizontalAlignment="Right"
                Style="{StaticResource UniformButton}"/>
    </Grid>
</Window>
