<Window x:Class="OpenCodeLab.Views.NewLabDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Lab" Height="550" Width="650" WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Lab Configuration" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Lab Settings -->
                <GroupBox Header="Lab Settings" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Lab Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="LabNameBox" Text="MyLab" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Domain Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="DomainNameBox" Text="lab.com" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Description:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="DescriptionBox" Height="50" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </Grid>
                </GroupBox>

                <!-- Network Settings -->
                <GroupBox Header="Network" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Switch Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="SwitchNameBox" Text="LabSwitch" Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Switch Type:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="SwitchTypeBox" SelectedIndex="0">
                            <ComboBoxItem Content="Internal"/>
                            <ComboBoxItem Content="External"/>
                            <ComboBoxItem Content="Private"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Virtual Machines -->
                <GroupBox Header="Virtual Machines" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Defined VMs:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Name="EditVMButton" Content="Edit Selected" Click="EditVMButton_Click" Width="100" Height="28" Margin="5,0" IsEnabled="False"/>
                            <Button Grid.Column="2" Name="DeleteVMButton" Content="Delete Selected" Click="DeleteVMButton_Click" Width="110" Height="28" Margin="5,0" IsEnabled="False"/>
                        </Grid>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0" Height="150">
                            <ListView Name="VMListBox" SelectionMode="Single">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Role" Width="100" DisplayMemberBinding="{Binding Role}"/>
                                        <GridViewColumn Header="RAM" Width="60" DisplayMemberBinding="{Binding MemoryGB}"/>
                                        <GridViewColumn Header="CPU" Width="50" DisplayMemberBinding="{Binding Processors}"/>
                                        <GridViewColumn Header="Disk" Width="60" DisplayMemberBinding="{Binding DiskSizeGB}"/>
                                        <GridViewColumn Header="OS" Width="200" DisplayMemberBinding="{Binding OperatingSystem}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                        <Button Name="AddVMButton" Content="+ Add Virtual Machine" Click="AddVMButton_Click" Width="150" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="CancelButton_Click" Width="80" Height="32" Margin="5"/>
            <Button Content="Create Lab" Click="CreateButton_Click" Width="100" Height="32" Margin="5" Background="{StaticResource PrimaryBrush}" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
