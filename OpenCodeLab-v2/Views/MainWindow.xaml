<Window x:Class="OpenCodeLab.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OpenCodeLab.Views"
        mc:Ignorable="d" Title="OpenCodeLab - Hyper-V Lab Manager" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{StaticResource CardBrush}" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">
                <!-- Logo/Title -->
                <StackPanel Margin="20,0,20,30">
                    <TextBlock Text="OpenCodeLab" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Lab Manager" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Nav Items -->
                <Button Name="DashboardButton" Click="NavButton_Click" Tag="Dashboard" Height="45" HorizontalContentAlignment="Left" Padding="15,0" BorderThickness="0" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Dashboard" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
                <Button Name="ActionsButton" Click="NavButton_Click" Tag="Actions" Height="45" HorizontalContentAlignment="Left" Padding="15,0" BorderThickness="0" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš¡" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Actions" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
                <Button Name="SettingsButton" Click="NavButton_Click" Tag="Settings" Height="45" HorizontalContentAlignment="Left" Padding="15,0" BorderThickness="0" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Settings" FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <Separator Margin="15,20"/>

                <!-- Info Section -->
                <StackPanel Margin="20,0">
                    <TextBlock Text="Version 2.0.0" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text=".NET 8 WPF" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}">
            <Grid>
                <!-- Header -->
                <Border Height="50" Background="{StaticResource CardBrush}" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" VerticalAlignment="Top">
                    <Grid>
                        <TextBlock Name="TitleText" Text="Dashboard" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <TextBlock Name="StatusText" Text="Ready" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                    </Grid>
                </Border>

                <!-- View Container -->
                <Grid Margin="0,50,0,0">
                    <views:DashboardView x:Name="DashboardView" Visibility="Collapsed"/>
                    <views:ActionsView x:Name="ActionsView" Visibility="Collapsed"/>
                    <views:SettingsView x:Name="SettingsView" Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
