<UserControl x:Class="OpenCodeLab.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Stats Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}" Padding="15" Margin="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total VMs" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                    <TextBlock Text="{Binding TotalVMs}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Running" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                    <TextBlock Text="{Binding RunningVMs}" FontSize="20" FontWeight="Bold" Foreground="Green"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Stopped" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                    <TextBlock Text="{Binding StoppedVMs}" FontSize="20" FontWeight="Bold" Foreground="Gray"/>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Total RAM" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                    <TextBlock Text="{Binding TotalMemoryGB}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                </StackPanel>
                <StackPanel Grid.Column="4">
                    <TextBlock Text="Total CPUs" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10"/>
                    <TextBlock Text="{Binding TotalProcessors}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                </StackPanel>
                <Button Grid.Column="5" Content="Refresh" Command="{Binding RefreshCommand}" Padding="12,6" Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Preflight Checks Panel (Collapsible) -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" Padding="15" Margin="10,0,10,10" CornerRadius="5">
            <StackPanel>
                <!-- Header row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton Grid.Column="0" IsChecked="{Binding PreflightExpanded}"
                                  Content="Preflight Checks" FontSize="14" FontWeight="SemiBold"
                                  Foreground="{StaticResource TextBrush}" Background="Transparent"
                                  BorderThickness="0" Cursor="Hand" VerticalAlignment="Center"
                                  Padding="0"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="Re-check" Command="{Binding RecheckCommand}"
                                Padding="10,4" Margin="0,0,8,0" Style="{StaticResource UniformButton}"/>
                        <Button Content="Initialize Env" Command="{Binding InitializeCommand}"
                                Padding="10,4" Style="{StaticResource UniformButton}"/>
                    </StackPanel>
                </Grid>

                <!-- Health check items (collapsible) -->
                <ItemsControl ItemsSource="{Binding HealthChecks}" Margin="0,10,0,0"
                              Visibility="{Binding PreflightExpanded, Converter={StaticResource BoolToVis}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="18"/>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" Width="12" Height="12"
                                         Fill="{Binding StatusColor}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}"
                                           Foreground="{StaticResource TextBrush}" FontSize="12"
                                           VerticalAlignment="Center" Margin="6,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="{Binding Status}"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- VM List -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" Margin="10,10,10,0" CornerRadius="5" Padding="10">
            <ListView ItemsSource="{Binding VirtualMachines}" SelectedItem="{Binding SelectedVM}" SelectionMode="Single" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Status" Width="90" DisplayMemberBinding="{Binding State}"/>
                        <GridViewColumn Header="Role" Width="120" DisplayMemberBinding="{Binding Role}"/>
                        <GridViewColumn Header="Detected Services" Width="150" DisplayMemberBinding="{Binding DetectedServices}"/>
                        <GridViewColumn Header="RAM" Width="70" DisplayMemberBinding="{Binding MemoryGB}"/>
                        <GridViewColumn Header="CPUs" Width="55" DisplayMemberBinding="{Binding Processors}"/>
                        <GridViewColumn Header="IP Address" Width="130" DisplayMemberBinding="{Binding IPAddress}"/>
                        <GridViewColumn Header="Uptime" Width="90" DisplayMemberBinding="{Binding FormattedUptime}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="{StaticResource CardBrush}" Padding="15" Margin="10" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="â–¶ Start" Command="{Binding StartCommand}" Width="100" Height="36" Margin="5" Style="{StaticResource UniformButton}"/>
                <Button Content="â–  Stop" Command="{Binding StopCommand}" Width="100" Height="36" Margin="5" Style="{StaticResource UniformButton}"/>
                <Button Content="â†» Restart" Command="{Binding RestartCommand}" Width="100" Height="36" Margin="5" Style="{StaticResource UniformButton}"/>
                <Button Content="â¸ Pause" Command="{Binding PauseCommand}" Width="100" Height="36" Margin="5" Style="{StaticResource UniformButton}"/>
                <Button Content="ðŸ’¥ Blow Away All" Command="{Binding BlowAwayCommand}" Width="120" Height="36" Margin="5" Style="{StaticResource RedButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
