<Window x:Class="OpenCodeLab.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About OpenCodeLab" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <!-- App Name -->
            <TextBlock Text="OpenCodeLab" FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,5"/>
            <TextBlock Text="Lab Manager" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,20"/>

            <!-- Version -->
            <TextBlock FontSize="14" Margin="0,0,0,15">
                <Run Text="Version" Foreground="{StaticResource TextSecondaryBrush}"/>
                <Run Text=" 2.0.0" FontWeight="SemiBold"/>
            </TextBlock>

            <!-- Description -->
            <TextBlock Text="WPF desktop app for building and managing Hyper-V lab environments using AutomatedLab."
                       TextWrapping="Wrap" FontSize="13" Margin="0,0,0,20"/>

            <!-- Tech Stack -->
            <TextBlock Text="Built with" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="#F0F0F0" CornerRadius="3" Padding="8,4" Margin="0,0,8,0">
                    <TextBlock Text=".NET 8" FontSize="11"/>
                </Border>
                <Border Background="#F0F0F0" CornerRadius="3" Padding="8,4" Margin="0,0,8,0">
                    <TextBlock Text="WPF" FontSize="11"/>
                </Border>
                <Border Background="#F0F0F0" CornerRadius="3" Padding="8,4" Margin="0,0,8,0">
                    <TextBlock Text="AutomatedLab" FontSize="11"/>
                </Border>
            </StackPanel>

            <!-- GitHub Link -->
            <TextBlock FontSize="12">
                <Hyperlink NavigateUri="https://github.com/anthonyscry/OpenCodeLab" RequestNavigate="Hyperlink_RequestNavigate">
                    github.com/anthonyscry/OpenCodeLab
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="1" Content="Close" Click="CloseButton_Click"
                Width="90" Height="32" HorizontalAlignment="Right"
                Style="{StaticResource UniformButton}"/>
    </Grid>
</Window>
