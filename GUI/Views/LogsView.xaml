<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- ── Run History section (top ~60%) ───────────────────────── -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header row -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Run History"
                           Style="{DynamicResource HeaderLabel}" />

                <ComboBox x:Name="cmbRunHistoryFilter"
                          Grid.Column="2"
                          Width="140"
                          Margin="0,0,8,0"
                          Style="{DynamicResource ModernComboBox}" />

                <Button x:Name="btnRefreshHistory"
                        Grid.Column="3"
                        Content="Refresh"
                        Padding="12,6"
                        Margin="0,0,8,0"
                        Style="{DynamicResource ModernButton}" />

                <Button x:Name="btnExportHistory"
                        Grid.Column="4"
                        Content="Export"
                        Padding="12,6"
                        Style="{DynamicResource ModernButton}" />
            </Grid>

            <!-- Run history DataGrid -->
            <Border Grid.Row="1" Style="{DynamicResource CardBorder}">
                <DataGrid x:Name="runHistoryGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Background="{DynamicResource CardBackgroundBrush}"
                          Foreground="{DynamicResource TextPrimaryBrush}"
                          RowBackground="{DynamicResource CardBackgroundBrush}"
                          AlternatingRowBackground="{DynamicResource SurfaceBrush}"
                          BorderThickness="0"
                          GridLinesVisibility="None">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                            <Setter Property="Padding" Value="8,4" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="RunId" Binding="{Binding RunId}" Width="120" />
                        <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="90" />
                        <DataGridTextColumn Header="Mode" Binding="{Binding Mode}" Width="70" />
                        <DataGridTextColumn Header="Success" Binding="{Binding Success}" Width="60" />
                        <DataGridTextColumn Header="Duration(s)" Binding="{Binding DurationSeconds}" Width="80" />
                        <DataGridTextColumn Header="Ended (UTC)" Binding="{Binding EndedUtc}" Width="160" />
                        <DataGridTextColumn Header="Error" Binding="{Binding Error}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Empty state message -->
            <TextBlock x:Name="txtNoHistory"
                       Grid.Row="2"
                       Text="No run history found. Deploy or teardown the lab to generate entries."
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"
                       Visibility="Collapsed" />
        </Grid>

        <!-- ── Session Log section (bottom ~40%) ────────────────────── -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Session Log header -->
            <TextBlock Grid.Row="0"
                       Text="Session Log"
                       Style="{DynamicResource HeaderLabel}"
                       Margin="0,4,0,8" />

            <!-- Top bar -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="cmbLogFilter"
                          Grid.Column="1"
                          Width="120"
                          Margin="0,0,8,0"
                          Style="{DynamicResource ModernComboBox}" />

                <Button x:Name="btnClearLogs"
                        Grid.Column="2"
                        Content="Clear"
                        Padding="12,6"
                        Style="{DynamicResource ModernButton}" />
            </Grid>

            <!-- Log output area -->
            <Border Grid.Row="2" Style="{DynamicResource CardBorder}">
                <ScrollViewer x:Name="logScroller"
                              VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLogOutput"
                               FontFamily="Cascadia Code,Consolas,Courier New"
                               FontSize="12"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</DockPanel>
